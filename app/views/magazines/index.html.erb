<h1>薄い本一覧</h1>

<%= image_tag "pronama02.png" %>

<h4><%= link_to "薄い本をリストに追加", new_magazine_path %></h4>

<h4><%= link_to "タイトルに戻る", root_path %></h4>

<hr>

<!-- 検索フォーム -->
<%= search_form_for @search do |f| %>
    <%= f.label :title_eq, "タイトル" %>
    <%= f.search_field :title_eq %>

    <%= f.label :origin_eq, "原作" %>
    <%= f.search_field :origin_eq %>

    <%= f.label :author_eq, "著者" %>
    <%= f.search_field :author_eq %>

    <%= f.label :circle_eq, "サークル" %>
    <%= f.search_field :circle_eq %>

    <%= f.submit "検索" %>
<% end %>

<% if @magazines.count == 0 %>
    <p><strong>見つかりませんでした。</strong></p>
<% else %>
    <p><strong><%= @magazines.count %>冊</strong></p>
    
    <ul>
        <% @magazines.each do |magazine| %>
            <h2><%= link_to magazine.title, magazine_path(magazine.id) %></h2>
        <% end %>
    </ul>
<% end %>
